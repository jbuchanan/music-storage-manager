# Music Storage Manager Environment Configuration
# Copy this file to .env and customize for your environment

# Flask Security
# Generate a secure secret key with: python -c 'import secrets; print(secrets.token_hex(32))'
FLASK_SECRET_KEY=change-this-to-a-random-secret-key

# Storage Paths
SSD_ROOT=/Volumes/Instruments
NAS_ROOT=/Volumes/Music
NAS_URL=smb://192.168.50.3/Music

# Logging
MSM_LOG_LEVEL=INFO
MSM_LOG_FILE=./music-storage-manager.log
MSM_APP_LOG_FILE=./music-storage-manager-app.log

# Error Alerting (Optional)
# Uncomment to enable webhook notifications for critical errors
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# ALERT_WEBHOOK_ENABLED=true

# Application Settings
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=5001
